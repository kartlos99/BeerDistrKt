    <style name="mainBtnStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginStart">@dimen/main_btn_hor_margin</item>
        <item name="android:layout_marginEnd">@dimen/main_btn_hor_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_btn_hor_margin</item>
        <item name="android:background">#E0E0F3</item>
        <item name="android:textColor">#49190B</item>
        <item name="android:textSize">@dimen/textSize_3</item>
    </style>

    <style name="OrderCansAppearance" >
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SaleSubTitles">
        <item name="android:layout_marginTop">@dimen/gr_size_8</item>
        <item name="android:padding">@dimen/gr_size_6</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="BarrelDataStyle">
        <item name="android:layout_marginTop">@dimen/gr_size_2</item>
        <item name="android:padding">@dimen/gr_size_6</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="FinanceAppearance">
<!--        <item name="android:layout_marginTop">@dimen/gr_size_2</item>-->
        <item name="android:paddingStart">@dimen/gr_size_8</item>
        <item name="android:paddingEnd">@dimen/gr_size_8</item>
        <item name="android:paddingTop">@dimen/gr_size_4</item>
        <item name="android:paddingBottom">@dimen/gr_size_4</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>

    </style>

    <style name="ClientDebt">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/colorForText_2</item>
        <item name="android:lineSpacingExtra">@dimen/gr_size_2</item>
    </style>

    <style name="ClientInfo">
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorSecondary">#fff</item>
    </style>

    <style name="SpinnerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/gr_size_8</item>
        <item name="android:paddingEnd">@dimen/gr_size_8</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SpinnerInOrderForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bkg_rounded_white_r8</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="android:elevation">@dimen/gr_size_2</item>
        <item name="android:minWidth">@dimen/gr_size_48</item>
        <item name="android:minHeight">@dimen/gr_size_36</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="CommentsRecyclerStyle">
        <item name="android:fadingEdge">vertical</item>
    </style>

    <style name="NoCommentsStyle">
        <item name="android:background">@drawable/no_comments</item>
        <item name="android:textSize">@dimen/sp36</item>
        <item name="android:padding">@dimen/gr_size_12</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.6</item>
        <item name="android:text">@string/no_comments</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
