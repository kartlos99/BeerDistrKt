<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainBtnStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginStart">@dimen/main_btn_hor_margin</item>
        <item name="android:layout_marginEnd">@dimen/main_btn_hor_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_btn_hor_margin</item>
        <item name="android:background">#E0E0F3</item>
        <item name="android:textColor">#49190B</item>
        <item name="android:textSize">@dimen/textsize_3</item>
    </style>

</resources>
