<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg_underline"
    android:paddingBottom="@dimen/gr_size_4">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/viewMoneyHistoryOperator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary20"
        android:padding="@dimen/gr_size_4"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/viewMoneyHistoryModifyDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/viewMoneyHistoryModifyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary20"
        android:padding="@dimen/gr_size_4"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/viewMoneyHistoryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gr_size_4"
        app:layout_constraintTop_toBottomOf="@id/viewMoneyHistoryOperator" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/viewMoneyHistoryAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/gr_size_4"
        app:layout_constraintEnd_toStartOf="@id/viewMoneyHistoryPaymentType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewMoneyHistoryDate" />

    <ImageView
        android:id="@+id/viewMoneyHistoryPaymentType"
        android:layout_width="@dimen/gr_size_32"
        android:layout_height="@dimen/gr_size_32"
        android:layout_marginEnd="@dimen/gr_size_16"
        app:layout_constraintBottom_toBottomOf="@id/viewMoneyHistoryAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewMoneyHistoryAmount" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/viewMoneyHistoryComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gr_size_4"
        app:layout_constraintTop_toBottomOf="@id/viewMoneyHistoryAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>