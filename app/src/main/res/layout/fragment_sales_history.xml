<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragPages.showHistory.SalesHistoryFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragSalesHistoryBaseInfo"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/gr_size_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gr_size_8"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragSalesHistoryRc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragSalesHistoryBaseInfo" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/fragSalesHistoryLoader"
        android:layout_width="@dimen/gr_size_64"
        android:layout_height="@dimen/gr_size_64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>