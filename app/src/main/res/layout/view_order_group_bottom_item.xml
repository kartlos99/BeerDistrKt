<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/totalOrderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gr_size_8"
        android:background="@color/green_02"
        android:gravity="center"
        android:padding="@dimen/gr_size_8"
        android:text="@string/orders_sum_title"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/totalSummedOrderRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gr_size_8"
        android:layout_marginTop="@dimen/gr_size_4"
        android:layout_marginBottom="@dimen/gr_size_8"
        android:background="@drawable/bkg_rounded_white_r8"
        android:backgroundTint="@color/green_02"
        android:elevation="@dimen/gr_size_2"
        android:padding="@dimen/gr_size_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalOrderTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>