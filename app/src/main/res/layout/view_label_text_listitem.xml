<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/gr_size_8"
        android:paddingVertical="@dimen/gr_size_4">

        <TextView
            android:id="@+id/listItemLabel"
            style="@style/ListItem.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/gr_size_4"
            android:minEms="4"
            tools:text="Label" />

        <TextView
            android:id="@+id/listItemText"
            style="@style/ListItem.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Text" />
    </LinearLayout>

    <View
        android:id="@+id/listItemBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/gray_light" />
</FrameLayout>