<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/inputTextET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gr_size_8"
        android:background="@drawable/bkg_rounded_white_r8"
        android:elevation="@dimen/gr_size_2"
        android:maxLines="6"
        android:minLines="4"
        android:padding="@dimen/gr_size_8"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/gr_size_2"
        android:layout_height="@dimen/gr_size_2"
        android:layout_marginTop="@dimen/gr_size_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputTextET" />

</androidx.constraintlayout.widget.ConstraintLayout>