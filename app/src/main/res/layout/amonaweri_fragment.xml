<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragPages.amonaweri.AmonaweriFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragStatementClientDebtAmount"
            style="@style/ClientDebt"
            android:layout_width="0dp"
            android:padding="@dimen/gr_size_4"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gr_size_4"
            android:text="@string/amount_is"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/fragStatementClientDebtBarrels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chk_gr_amonaweri" />

        <TextView
            android:id="@+id/fragStatementClientDebtBarrels"
            style="@style/ClientDebt"
            android:padding="@dimen/gr_size_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/gr_size_2"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/fragStatementBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="fragStatementClientDebtAmount, fragStatementClientDebtBarrels"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_gr_amonaweri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        <Button-->
        <!--            android:id="@+id/btn_p4_tarigi"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="@string/text_tarigi"-->
        <!--            android:drawableEnd="@drawable/calendar_icon"-->
        <!--            app:layout_constraintRight_toRightOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:layout_marginEnd="8dp" />-->


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_amonaweri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragStatementBarrier" />


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_amonaweri"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:paddingStart="@dimen/gr_size_4"
            android:paddingEnd="@dimen/gr_size_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs_amonaweri" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>