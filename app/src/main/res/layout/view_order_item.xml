<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orderItemNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gr_size_8"
        android:layout_marginBottom="@dimen/gr_size_8"
        android:ellipsize="end"
        android:lines="1"
        android:text="lageri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/orderItemNameUnderline"
        android:layout_width="0dp"
        android:layout_height="@dimen/gr_size_1"
        android:layout_marginTop="@dimen/gr_size_2"
        android:background="@color/gray_3"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@id/orderItemNameTv"
        app:layout_constraintStart_toStartOf="@id/orderItemNameTv"
        app:layout_constraintTop_toBottomOf="@id/orderItemNameTv" />

    <ImageView
        android:layout_width="168dp"
        android:layout_height="4dp"
        android:layout_marginEnd="@dimen/gr_size_16"
        android:layout_marginBottom="@dimen/gr_size_6"
        android:src="@drawable/line_4_desh"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>