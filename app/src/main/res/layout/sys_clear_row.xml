<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/gr_size_4"
    android:background="@drawable/bkg_underline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sysClearItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="5"
        android:text="@string/dasaxeleba" />

    <TextView
        android:id="@+id/sysClearItemDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/text_tarigi" />

    <TextView
        android:id="@+id/sysClearItemDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:paddingEnd="@dimen/gr_size_4"
        android:layout_weight="2"
        android:text="@string/past_days" />

</LinearLayout>